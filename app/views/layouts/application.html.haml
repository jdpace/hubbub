!!! Strict
%html{ html_attrs("en_us") }
  %head
    %title 
      cltrb &mdash;
      = yield(:page_title) || yield(:title) || "Charlotte Ruby Users Group"
    %meta{ :content => "text/html; charset=utf-8", "http-equiv" => "content-type" }/
    
    = render :partial => 'shared/head'
    = yield :head
  %body{:id => controller.controller_name, :class => controller.action_name}
    #header
      %a#site-name{:href => '/'} cltrb
      %span#tag-line Charlotte Ruby Users Group
    #nav-bar
      = render :partial => 'shared/navigation'
      
    #content
      - if content_title = yield(:title)
        %h1#content-title= content_title
      
      = render :partial => 'shared/flash_messages', :locals => {:flash => flash}
  
      = yield
      
    #sidebar
      %h4#sponsors Sponsors
      = link_to image_tag('sponsors/engineyard.png'), 'http://www.engineyard.com', :target => '_blank'
        
    #footer
      %p Powered by Hubbub. Built by the Charlotte Ruby Users Group.
    = yield :scripts